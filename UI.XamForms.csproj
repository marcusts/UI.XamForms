    <EmbeddedResource Include="Common\Images\hide_password.png" />
    <EmbeddedResource Include="Common\Images\settings_deselected.png" />
    <EmbeddedResource Include="Common\Images\settings_selected.png" />
    <EmbeddedResource Include="Common\Images\show_password.png" />
    <EmbeddedResource Include="Common\Images\unchecked.png" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Com.MarcusTS.PlatformIndependentShared" Version="2.0.5" />
    <PackageReference Include="Com.MarcusTS.ResponsiveTasks" Version="2.0.5" />
    <PackageReference Include="Com.MarcusTS.SharedUtils" Version="2.0.5" />
    <PackageReference Include="Com.MarcusTS.SmartDI" Version="2.0.5" />
    <PackageReference Include="PropertyChanged.Fody" Version="3.4.1" />
    <PackageReference Include="Xamarin.Essentials" Version="1.7.3" />
    <PackageReference Include="Xamarin.Forms" Version="5.0.0.2515" />
  </ItemGroup>

  <ItemGroup>
    <None Update="FodyWeavers.xsd">
      <SubType>Designer</SubType>
    </None>
  </ItemGroup>

</Project>
